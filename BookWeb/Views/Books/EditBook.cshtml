@model BooksViewModel

<head>
	<link href="@Url.Content("~/css/Edit.css")" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="EditBox">

        <form method="post" asp-action="EditBook" class="Form">

            @using (Html.BeginForm("EditBook", "Books", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.BookID)
                <div class="row">
                    <div class="form-group">
                        <label for="Title">Titulo</label>
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="Year">Año</label>
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="ISBN">ISBN</label>
                        @Html.TextBoxFor(model => model.ISBN, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="Editorial">Editorial</label>
                        @Html.TextBoxFor(model => model.Editorial, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="Pages">Páginas</label>
                        @Html.TextBoxFor(model => model.Pages, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="Format">Formato</label>
                        @Html.TextBoxFor(model => model.Format, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <label for="Synopsis">Sinopsis</label>
                        @Html.TextBoxFor(model => model.Synopsis, new { @class = "form-control" })
                    </div>
                </div>

                <button type="submit" class="BtnSubmit" value="EditBook">Guardar</button>
                <a class="BtnCancel2" asp-action="Index">Cancelar</a>
            }
        </form>
    </div>
</body>